version: '3.8'

services:
  # PostgreSQL Database
  postgres:
    image: postgres:15-alpine
    container_name: qsc_postgres_prod
    environment:
      POSTGRES_DB: quantum_commerce
      POSTGRES_USER: qsc_user
      POSTGRES_PASSWORD: secure_password
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - qsc_network
    restart: always

  # Redis Cache
  redis:
    image: redis:7-alpine
    container_name: qsc_redis_prod
    command: redis-server --requirepass redis_secure_pass
    volumes:
      - redis_data:/data
    networks:
      - qsc_network
    restart: always

  # API Backend
  api:
    build: .
    container_name: qsc_api_prod
    environment:
      - DATABASE_URL=postgresql://qsc_user:secure_password@postgres:5432/quantum_commerce
      - REDIS_URL=redis://default:redis_secure_pass@redis:6379/0
      - SECRET_KEY=your-secret-key-here
      - JWT_SECRET_KEY=jwt-secret-key
      - IBE_MASTER_PASSWORD=secure_master_password
      - ENVIRONMENT=production
    volumes:
      - ./keys:/app/keys
      - ./logs:/app/logs
    depends_on:
      - postgres
      - redis
    networks:
      - qsc_network
    restart: always

  # Nginx
  nginx:
    image: nginx:alpine
    container_name: qsc_nginx_prod
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.prod.conf:/etc/nginx/nginx.prod.conf:ro
      - ./webapp/dist:/usr/share/nginx/html:ro
    depends_on:
      - api
    networks:
      - qsc_network
    restart: always

volumes:
  postgres_data:
  redis_data:

networks:
  qsc_network:
    driver: bridge

# Thêm vào phần environment của api service:
      - DATABASE_URL=postgresql://qsc_user:secure_password@postgres:5432/quantum_commerce
